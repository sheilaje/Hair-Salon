@{
  Layout = "_Layout";
}

@using HairSalon.Models;
<div class = "container">
@if (@Model.Count == 0)
{
  <p>No Stylists are available .</p>
  <a href = '/'> Go back to the HOME PAGE</a>
}

@foreach (var stylist in Model)
{
  <p><a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a></p>
}
</div>

<a href = '/'> Go back to the HOME PAGE</a>
