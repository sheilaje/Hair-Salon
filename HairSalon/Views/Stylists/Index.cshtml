@{
  Layout = "_Layout";
}

@using HairSalon.Models;
<div class = "container">
@if (@Model.Count == 0)
{
  <h3>No Stylists are available .</h3>
  <a href = '/'> Go back to the HOME PAGE</a>
}

@foreach (var stylist in Model)
{
  <h3><a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a></h3>
}
</div>

<a href = '/'> Go back to the HOME PAGE</a>
